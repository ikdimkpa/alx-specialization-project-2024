<div class="author">
    <h1 class="author_heading">Blog Post by Joseph, Ike, Stanhope</h1>
    <p class="author_body">ALX Portfolio Project</p>
</div>

<img src="/img/web.jpg" alt="Web image" class="hero_image" width="700" height="300">

<section class="article">
    <h2 class="article_heading">Latest Posts</h2>
    <ul class="article_ul">
        <% data.forEach(post => { %>         
            <li>
            <a href="/post/<%=post._id %>">
                <span><%= post.title %></span>
                <span class="article_list_data"><%= post.createdAt.toDateString() %></span>
            </a>
        </li>
        <% }) %>
    </ul>
    <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View older posts</a>    <% } %>
</section>

